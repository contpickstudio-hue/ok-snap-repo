{
  "git": {
    "deploymentEnabled": {
      "main": true,
      "site": false
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/sync-recipes",
      "schedule": "0 2 * * *"
    }
  ]
}
